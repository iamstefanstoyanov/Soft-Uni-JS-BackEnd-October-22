        <section class="crypto-search">
            <h1>Search</h1>

            <form class="search-form" action="/search" method="get">
                <input type="text" class="search-coin" name="search" placeholder="Search here..."value="{{search}}">
                <select id="payment" name="type">
                    <option value="crypto-wallet">Crypto Wallet</option>
                    <option value="credit-card">Credit Card</option>
                    <option value="debit-card">Debit Card</option>
                    <option value="paypal">PayPal</option>s
                </select>
                <button type="submit" class="btn-search" value="Search">Search</button>
            </form>
            {{#if cryptos}}
            <div class="search-result">
                <div class="search-list">
                   {{#each crypto}}
                    {{> crypto username=../username}}
                  {{/each}}
                </div>
            </div>
            {{else}}
            <div class="no-match">
                <p>No match was found!</p>
            </div>
            {{/if}}
        </section>