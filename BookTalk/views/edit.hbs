{{#if errors}}
<div>
    <div class="errorContainer">
        {{#each errors}}
        <p>{{this}}</p>
        {{/each}}
    </div>
</div>
{{/if}}
    <section class="edit-form-container">
        {{#with book}}
        <form action="/book/{{_id}}/edit" method="post">
            <h3>Edit Book Review</h3>
            <label>Title</label>
            <input type="text" name="title" class="box" id="" value="{{title}}">
            <label>Author</label>
            <input type="text" name="author" class="box" id=""value="{{author}}">
            <label>Genre</label>
            <input type="text" name="genre" class="box" id=""value="{{genre}}">
            <label>Stars</label>
            <input type="number" name="stars" class="box" id=""value="{{stars}}">
            <label>Image</label>
            <input type="text" name="imageUrl" class="box" id=""value="{{imageUrl}}">
            <label>Review</label>
            <textarea class="box"
                name="bookReview">{{bookReview}}</textarea>
            <input type="submit" value="Edit" class="btn">
        </form>
        {{/with}}
    </section>